<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HDRescuer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_secondary</item>
        <item name="colorPrimaryVariant">@color/blue_top_mini_bar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_top_mini_bar</item>
        <item name="colorSecondaryVariant">@color/blue_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HDRescuer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HDRescuer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HDRescuer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.HDRescuer.FullScreenDialogStyle" parent ="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/blue_secondary</item>
        <item name="colorPrimaryVariant">@color/blue_primary</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_top_mini_bar</item>


        <!--Estilos para pantalla completa-->
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/blue_primary</item>

    </style>


</resources>